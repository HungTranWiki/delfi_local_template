<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_header_layout"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <TextView
            android:id="@+id/textView13"
            style="@style/Content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/printer_ip" />
        <EditText
            android:id="@+id/edtPrinterIP"
            style="@style/Edittext_Common_Left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_edittext"
            android:minHeight="@dimen/height_edittext"
            android:layout_marginTop="13dp"
            android:background="@drawable/drawable_edittext_common"
            android:hint=""
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text = "" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/saveButton"
            style="@style/Button_Common"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button"
            android:layout_weight="1"
            android:background="@drawable/bg_blue_button"
            android:layout_marginRight="8dp"
            android:text="@string/settings_save" />
        <Button
            android:id="@+id/connectButton"
            style="@style/Button_Common"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_button"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_blue_button"
            android:text="@string/try_connect_button" />
    </LinearLayout>

</LinearLayout>
