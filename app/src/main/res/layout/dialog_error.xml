<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_label_edit_record"
            android:orientation="vertical">
        <ImageView
            style="@style/DialogHeaderIcon"
            android:id="@+id/imageHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_1dp"
            app:srcCompat="@drawable/ic_warning_orange_circle_grey"
            android:contentDescription="@null" />
        <TextView
            style="@style/TextBlackBold16"
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/general_error_title"
            android:textStyle="bold"
            android:textColor="@color/light_black" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_small"
            android:layout_marginBottom="@dimen/padding_small">
            <TextView
                android:id="@+id/message"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Message show here\nMessage show here\nMessage show here\nMessage show here\nMessage show here"
                style="@style/TextGrey14"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:background="@color/white"/>
        </ScrollView>
        <Button
            android:id="@+id/buttonOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonTextWhite14"
            android:background="@drawable/bg_corner_orange"
            android:layout_marginLeft="@dimen/padding_plus"
            android:layout_marginRight="@dimen/padding_plus"
            android:layout_marginBottom="@dimen/padding_extra"
            android:layout_marginTop="@dimen/padding_extra"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="@string/retry"/>
    </LinearLayout>
</RelativeLayout>