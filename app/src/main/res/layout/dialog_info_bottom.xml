<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">
    <LinearLayout
        android:id="@+id/lnBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/bg_white_border_top"
        android:orientation="vertical">
        <TextView
            style="@style/TextBlackBold16"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="@string/completed_setting"
            android:textStyle="bold"
            android:textColor="@color/light_black" />
        <ImageView
            style="@style/DialogHeaderIcon"
            android:id="@+id/imgTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_60sdp"
            app:srcCompat="@drawable/ic_big_white_checked"
            android:background="@drawable/bg_big_green_circle"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/padding_small"
            android:background="@color/transparent">
            <TextView
                android:id="@+id/tvMessage"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/close_after_3s"
                style="@style/TextGreyRegular12"
                android:layout_gravity="center"
                android:gravity="center_horizontal"/>
        </ScrollView>
        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ButtonTextWhite14"
            android:background="@drawable/bg_corner_blue"
            android:layout_marginLeft="@dimen/padding_plus"
            android:layout_marginRight="@dimen/padding_plus"
            android:layout_marginBottom="@dimen/padding_extra"
            android:layout_gravity="center"
            android:textAllCaps="false"
            android:text="@string/ok"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>