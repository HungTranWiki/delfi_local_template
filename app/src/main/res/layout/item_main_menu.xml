<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardMainMenu"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    app:cardElevation="0.5dp"
    app:cardMaxElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:background="@drawable/bg_while_and_blue"
        >
        <ImageView
            android:id="@+id/imgMainMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_sale_menu_blue_and_white"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tvName"
            style="@style/TextBlackSemiBold16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:lineSpacingExtra="2sp"
            android:maxLines="3"
            android:minLines="2"
            android:gravity="center_vertical"
            android:textSize="16sp"
            tools:text="production"
            android:layout_below="@id/imgMainMenu"/>

        <TextView
            android:id="@+id/menuCountView"
            style="@style/White_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circle_pink"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginLeft="56dp"
            android:layout_alignParentLeft="true"
            tools:text="20"
            tools:visibility="visible"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
