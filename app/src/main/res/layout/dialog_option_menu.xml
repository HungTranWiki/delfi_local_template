<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:id="@+id/lnViewBottomDialog">

    <ScrollView
        android:id="@+id/scrollMenus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="400dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_label_edit_record"
            android:orientation="vertical"
            android:padding="@dimen/padding">
            <TextView
                style="@style/TextBlackSemiBold14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/config"
                android:textAllCaps="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center_horizontal"
                android:layout_marginBottom="@dimen/padding"
                />
            <LinearLayout
               android:id="@+id/lnSetting"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:padding="@dimen/padding"
               android:background="@drawable/bg_corner_grey">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   app:srcCompat="@drawable/ic_setting"
                   android:padding="@dimen/_4sdp"
                   android:background="@drawable/bg_corner_blue_2888dc"/>
               <TextView
                   style="@style/TextBlackSemiBold14"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:gravity="center_vertical"
                   android:layout_marginLeft="@dimen/_8sdp"
                   android:maxLines="1"
                   android:text="@string/app_setting"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnSyncDataApi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding"
                android:background="@drawable/bg_corner_grey"
                android:layout_marginTop="@dimen/padding">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_sync"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/bg_corner_blue_2888dc"/>
                <TextView
                    style="@style/TextBlackSemiBold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:maxLines="1"
                    android:text="@string/sync_data_api"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnSyncDataCommunication"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/padding"
                android:background="@drawable/bg_corner_grey"
                android:layout_marginTop="@dimen/padding">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_sync"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/bg_corner_blue_2888dc"/>
                <TextView
                    style="@style/TextBlackSemiBold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:maxLines="1"
                    android:text="@string/sync_data_communication"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnNeedHelp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/padding"
                android:background="@drawable/bg_corner_grey"
                android:layout_marginTop="@dimen/_10sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_need_help"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/bg_corner_blue_2888dc"/>
                <TextView
                    style="@style/TextBlackSemiBold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:maxLines="1"
                    android:text="@string/need_help"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnAboutDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_corner_grey"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/padding">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_about_device"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/bg_corner_blue_2888dc"/>
                <TextView
                    style="@style/TextBlackSemiBold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:maxLines="1"
                    android:text="@string/about_device"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnLogOut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_corner_grey"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/padding">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_logout_white"
                    android:padding="@dimen/_4sdp"
                    android:background="@drawable/bg_corner_blue_2888dc"/>
                <TextView
                    style="@style/TextBlackSemiBold14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:maxLines="1"
                    android:text="@string/logout"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/imgClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:padding="@dimen/padding"
        android:layout_marginTop="@dimen/padding_4dp"
        app:srcCompat="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/scrollMenus" />
</android.support.constraint.ConstraintLayout>

